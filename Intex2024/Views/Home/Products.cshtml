@{
    ViewData["Title"] = "Products";
}

@model ProductsListViewModel

<style>
    .hero-section {
      background-image: url('/img/prodHero.png'); /* Replace 'your-image-url.jpg' with the URL or path to your desired background image */
      background-size: cover;
      background-position: center;
      color: white;
      height: 400px;
      position: relative;
    }
    .hero-content {

    }
    .hero-section .container-fluid {
        padding-left: 50px;
        padding-right: 0;
    }
    .hero-heading-prod {
        color: white;
        font-weight: 600;
        font-family: 'Inter', sans-serif;
        font-size: 55px; /* Adjust the font size as needed */
        text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
    }
    .hhh-pos {
        align-items: center;
        justify-content: center;
    }
    .btn-shop-hero {
        width: 220px; /* Set the width */
        height: 92px; /* Set the height */
        background-color: white; /* Set the background color */
        color: black; /* Set the text color */
        border: none;
        border-radius: 100px; /* Remove border radius */
        font-size: 30px; /* Set the font size */
        font-weight: bold; /* Set the text to bold */
        display: flex; /* Use flexbox */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }
    .home-mustsee {
        padding-top: 100px;
        text-align: center;
    }
    .btn-shop-hero-pos {
        position: absolute;
        bottom: 50px;
        left: 50px;
    }
    .jump-head {
      padding-top: 100px;
      padding-left: 125px;
    }
    .bg-gold {
      background-color: #FFD700;
    }
	.item-of-week {
		font-size: 75px;
	}
</style>
<script>
    function changePageSize() {
        var select = document.getElementById("pageSizeSelect");
        var selectedValue = select.options[select.selectedIndex].value;
        // Redirect to the same page with the selected page size as a query parameter
        window.location.href = `@Url.Action("Products", new { pageNum = 1, pageSize = "__pageSize__" })`.replace("__pageSize__", selectedValue);
    }
    window.onload = function() {
        var select = document.getElementById("pageSizeSelect");
        var pageSize = @Model.PaginationInfo.ItemsPerPage; // Get the current page size from the model
        for (var i = 0; i < select.options.length; i++) {
            if (select.options[i].value == pageSize) {
                select.options[i].selected = true;
                break;
            }
        }
    };

</script>
<section  style="background: linear-gradient(to right, rgba(68, 159, 255, 0.25), rgba(0, 61, 125, 0.25));">
	<section>
		<div class="hero-section d-flex align-items-center">
			<div class="container-fluid">
			<div class="row">
				<div class="col-sm">
				<div class="hero-content text-center">
					<h1 class="hero-heading-prod">Dive into YOUR next Lego Adventure</h1>
                    <h4 class="text-left" style="font-size: 24px;">Get Your Favorite Lego Sets Here</h4>
				</div>
				</div>
			</div>
			</div>
		</div>
	</section>
    <section>
        <div class="mt-3">
            <label for="pageSizeSelect">Products Per Page:</label>
            <select id="pageSizeSelect" class="form-control" onchange="changePageSize()">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
            </select>
        </div>
        <div class="row m-1 p-1">
            <div class="col-3">
                <vc:product-categories />
            </div>
        </div>
            
        <div class="container">
            <div class="row">
                @foreach (Product product in Model.Products)
                {
                    <partial name="ProductCard" model="product"/>
                }
            </div>
        </div>
    </section>
<div page-model="@Model.PaginationInfo" page-action="Products" page-class-enabled="true" page-class-normal="btn-outline-dark" 
	page-class="btn" page-class-selected="active" class="btn-group pull-right m-1"></div>

</section>