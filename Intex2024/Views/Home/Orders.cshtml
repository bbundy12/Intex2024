    <table>
        <tr>
            <th>TransactionId</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>ShippingAddress</th>
            <th>Fraud</th>
        </tr>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.TransactionId</td>
                <td>@o.Date.ToShortDateString()</td>
                <td>@o.Customer</td>
                <td>@o.Amount</td>
                <td>@o.ShippingAddress</td>
                <td>@(o.Fraud ? "Yes" : "No")</td>
            </tr>
        }
    </table>
</body>
</html>
