@model Product

<!DOCTYPE html>
<html>
<head>
    <title>Admin Page - Products</title>
    <style>
        body {
            background: linear-gradient(to right, #A7CFFB, #067CFE);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        nav {
            background-color: #006FE3;
            padding: 10px;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 150px;
        }
        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }
        nav ul li {
            margin-bottom: 5px;
        }
        nav ul li a {
            display: block;
            padding: 10px;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        nav ul li a:hover {
            background-color: #004E9C;
        }
        form {
            width: 400px; /* Adjust width as needed */
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            max-height: 600px; /* Adjust the max height as needed */
            overflow-y: auto; /* Adjust the top margin to create space below the header */
        }
        h1 {
            text-align: center;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
        }
        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }
        button[type="submit"] {
            background-color: #006FE3;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button[type="submit"]:hover {
            background-color: #004E9C;
        }
    </style>
</head>
<body>
<nav>
    <ul>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Orders</a></li>
        <li><a href="#">AdminProducts</a></li>
        <li><a href="#">AddProducts</a></li>
        <li><a href="#">AdminUsers</a></li>
    </ul>
</nav>
<h1>Add Product</h1>

<form method="post">
    <input type="hidden" asp-for="ProductId"/>
    <br/>
    <label asp-for="Name">Product Name:</label>
    <input asp-for="Name"/>
    <br/>
    <label asp-for="Year">Year:</label>
    <input asp-for="Year"/>
    <br/>
    <label asp-for="NumParts">Number of Parts :</label>
    <input asp-for="NumParts"/>
    <br>
    <label asp-for="Price">Price:</label>
    <input asp-for="Price">
    <br/>
    <label asp-for="ImgLink">Image Link</label>
    <input asp-for="ImgLink">
    <br/>
    <label asp-for="PrimaryColor">Primary Color</label>
    <input asp-for="PrimaryColor"/>
    <br/>
    <label asp-for="SecondaryColor">Secondary</label>
    <input asp-for="SecondaryColor"/>
    <br/>
    <label asp-for="Description">Description</label>
    <input asp-for="Description"/>
    <br/>
    <label asp-for="Category">Category</label>
    <input asp-for="Category"/>

    <button type="submit">Confirm New Product</button>

</form>
</body>
</html>
