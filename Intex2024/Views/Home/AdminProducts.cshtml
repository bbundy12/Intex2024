@model List<Product>

<!DOCTYPE html>
<html>
<head>
    <title>Admin Page - Products</title>
    <style>
             body {
                    background: linear-gradient(to right, #A7CFFB, #067CFE);
                    margin: 0;
                    padding: 0;
                }
                nav {
                    background-color: #006FE3;
                    padding: 10px;
                    position: fixed;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    width: 150px;
                }
                nav ul {
                    list-style-type: none;
                    padding: 0;
                    margin: 0;
                }
                nav ul li {
                    margin-bottom: 5px;
                }
                nav ul li a {
                    display: block;
                    padding: 10px;
                    color: white;
                    text-decoration: none;
                    transition: background-color 0.3s ease;
                }
                nav ul li a:hover {
                    background-color: #004E9C;
                }
                table {
                    border-collapse: collapse;
                    margin-left: 170px; /* Adjust this value to leave space for the navigation menu */
                    width: calc(100% - 170px); /* Adjust this value to leave space for the navigation menu */
                    border: 2px solid #006FE3;
                }
                th, td {
                    padding: 8px;
                    text-align: left;
                    border-bottom: 1px solid #006FE3;
                }
                th {
                    background-color: #006FE3;
                    color: white;
                }
                tr:nth-child(even) {
                    background-color: #f2f2f2;
                }
                .filter-container {
                    margin-bottom: 10px;
                }
                .filter-container label {
                    display: block;
                }
                .filter-container input[type="text"],
                .filter-container select {
                    width: 200px;
                    margin-bottom: 5px;
                }
                .search-button {
                    float: right;
                    margin-bottom: 10px;
                }
    </style>
</head>
<body>
<nav>
    <ul>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Orders</a></li>
        <li><a href="#">AdminProducts</a></li>
        <li><a href="#">AddProducts</a></li>
        <li><a href="#">AdminUsers</a></li>
    </ul>
</nav>

@using (Html.BeginForm("AdminProducts", "Home", FormMethod.Post))
{
    <!-- Search/filter form HTML -->
    <h2>Past Orders</h2>
    <div class="filter-container">
        <label for="Name">Product Name:</label>
        <input type="text" id="Name" name="Name">

        <label for="Year">Year:</label>
        <input type="text" id="Year" name="Year">

        <label for="NumParts">Number of Parts:</label>
        <input type="text" id="NumParts" name="NumParts">

        <label for="Price">Price:</label>
        <input type="text" id="Price" name="Price">

        <button type="submit" class="search-button">Search</button>
    </div>
}

<!-- Include the partial view for list/table view of products -->
@Html.Partial("_ListProductsView", Model)
</body>
</html>