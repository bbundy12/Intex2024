<!DOCTYPE html>
<html>
<head>
    <title>Admin Page - Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include Bootstrap CSS -->
    <style>
        body {
            background: linear-gradient(to right, #A7CFFB, #067CFE);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        nav {
            padding: 10px;
            width: 150px;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            height: auto; /* Adjusting height to be auto */
        }

        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            margin-bottom: 5px;
        }

        nav ul li a {
            display: block;
            padding: 10px;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        nav ul li a:hover {
            background-color: #004E9C;
        }

        .container-table {
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            max-height: calc(100vh - 130px); /* Adjusting max-height to fit the remaining viewport */

            overflow-y: auto;
            align-self: normal;
            margin-left: 175px;
            min-width: 600px;
            overflow-x: hidden;
            height: auto; /* Adjusting height to be auto */
        }

        .container-table h1 {
            text-align: center;
            margin-bottom: 20px; /* Add margin to create space between h1 and nav */
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #006FE3;
            color: black; /* Set the text color of table headers to black */
        }

        th {
            background-color: #006FE3;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>


<div class="container">
    
    <h1 class="text-center">Admin Products</h1>
    <nav>
        <ul class="list-unstyled" >
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            
            
            
            <li class="col-md-12 mb-2 text-center">
                <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="Orders">Orders</a>
            </li>
            <li class="col-md-12 mb-2 text-center">
                <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="AdminProducts">Admin Products</a>
            </li>
            <li class="col-md-12 mb-2 text-center">
                <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="AddProduct">Add Products</a>
            </li>
            <li class="col-md-12 mb-2 text-center">
                <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="AdminUsers">Admin Users</a>
            </li>
        </ul>
    </nav>

    <div class="container-form col-md-8">
        
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Product Name</th>
                <th>Year</th>
                <th>Number of Parts</th>
                <th>Price</th>
                <th>Image Link</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Name</td>
                    <td>@o.Year</td>
                    <td>@o.NumParts</td>
                    <td>@o.Price</td>
                    <td>@o.ImgLink</td>
                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@o.ProductId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="DeleteConfirmation" asp-route-id="@o.ProductId">Delete</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>



<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Include Bootstrap JS -->
</body>
</html>
