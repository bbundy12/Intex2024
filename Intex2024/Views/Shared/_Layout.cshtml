<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intex2024</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intex2024.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <header style="background-color: transparent;" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: transparent;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @* View the logo *@
                    <img src="~/img/AURORA_S__2_-removebg-preview.png" alt="Aurora's Brick Well Logo" style="max-height: 110px;">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="OrderPredictions">Admin</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li>
                            <partial name="_LoginPartial" />
                        </li>
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item" style="margin-right: 30px;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart">
                                    <img src="~/img/shopping-cart.png" alt="Shopping Cart Icon" style="max-height: 35px;">
                                </a>
                            </li>
                        }             

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0"> <!-- Change from container to container-fluid and remove padding -->
        <main role="main">
            @RenderBody()
            <br><br><br>
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-#FFD700">
            <div class="container-fluid">

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Aurora's Brick Well</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark">© 2024 BrickWell Inc</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <img src="~/img/ae569571-4d87-481c-8fa0-8ceaafd95fa0.png" alt="Link to Tiktok" style="max-height: 35px;">
                        </li>
                        <li class="nav-item">
                            <img src="~/img/582c42ea-fa40-434f-9a37-90a2dbae2992.png" alt="Link to Youtube" style="max-height: 30px;">
                        </li>
                        <li class="nav-item">
                            <img src="~/img/twitterx.png" alt="Link to Twitter" style="max-height: 35px;">
                        </li>
                        <li class="nav-item">
                            <img src="~/img/ccb8029d-fa5c-459c-9b0d-b4c86327f742.png" alt="Link to Instagram" style="max-height: 35px;">
                        </li>
                    </ul>
                </div>



            </div>
        </nav>
    </footer>    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    @Html.Partial("_CookieConsentPartial")
 
</body>s
</html>