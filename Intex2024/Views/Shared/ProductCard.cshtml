@using Intex2024.Infrastructure
@{
}

@model Product

<style>
    .card {
        width: 300px; /* Set the width of the card */
    }

    .card-img-top {
        width: 300px; /* Set the width of the image */
        height: 200px; /* Set the height of the image */
        object-fit: cover; /* Maintain aspect ratio */
    }
</style>

<div class="col-sm mb-4">
    <div class="card">
        <img src="@Model.ImgLink" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">$@Model.Price</p>
            <form id="@Model.ProductId" method="post" asp-page="/Cart">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
            <form method="get" asp-page="/ProductDetails" asp-route-id="@Model.ProductId">
                <button type="submit" class="btn btn-primary">View Details</button>
            </form>
        </div>
    </div>
</div>
