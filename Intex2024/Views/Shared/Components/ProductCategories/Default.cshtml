@{
}
@model IQueryable<string>

<div class="d-grid gap-2">
    @foreach(string pc in Model ?? Enumerable.Empty<string>()) //If model is empty, return an empty string
    {
        <a class="btn @(pc == ViewBag.SelectedProductCategory ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Products" asp-route-productCategory="@pc" asp-route-pageNum="1">@pc</a>
        
    }

</div>