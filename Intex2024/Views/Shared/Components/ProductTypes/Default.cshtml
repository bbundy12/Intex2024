@model IQueryable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-projectType="" asp-route-pageNum="">Home</a> @*Blank since this is the default view. should take you to the home *@

    @foreach(string pt in Model ?? Enumerable.Empty<string>()) //If model is empty, return an empty string
    {
        <a class="btn @(pt == ViewBag.SelectedProjectType ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-projectType="@pt" asp-route-pageNum="1">@pt</a>
        
    }

</div>